package com.kth.ssr.server.socket;

import java.io.IOException;
import java.io.InputStream;
import java.io.ObjectInput;
import java.io.ObjectInputStream;
import java.net.Socket;

import com.kth.ssr.server.models.VoiceSample;

/**
 * @author georgios.savvidis
 *
 */
public class SocketHandler extends Thread{
	private Socket mSocket;
	
	public SocketHandler(Socket socket){
		mSocket = socket;
	}
	
	@Override
	public void run() {
		super.run();
		
		try{
			InputStream inputStream = mSocket.getInputStream();
			ObjectInput objectInput = new ObjectInputStream ( inputStream );
			
			VoiceSample voiceSample = (VoiceSample) objectInput.readObject();
			//TODO handle received object
			
			
			inputStream.close();
			objectInput.close();
			mSocket.close();
			
		} catch (IOException e){
			e.printStackTrace();
			System.out.println("Failed to get InputStream");
		} catch (ClassNotFoundException e) {
			e.printStackTrace();
			System.out.println("Could not cast InputStream.");
		}
	}
}