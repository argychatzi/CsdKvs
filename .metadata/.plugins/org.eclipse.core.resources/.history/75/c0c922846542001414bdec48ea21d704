		super.run();
		
		try{
//			InputStream inputStream = mSocket.getInputStream();
			InputStreamReader streamReader = new InputStreamReader(mSocket.getInputStream());

			 String text = null;
			    try (final Reader reader = new InputStreamReader(inputStream)) {
			        text = CharStreams.toString(reader);
			    }

			
			
//			Object receivedObject = objectInput.readObject();
			System.out.println("Received message: " + streamReader.toString());
			//TODO handle received object
			
			
			streamReader.close();
//			objectInput.close();
